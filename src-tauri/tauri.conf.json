{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AnnotationTimeline",
  "version": "0.1.0",
  "identifier": "com.example.ann-tool-v1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Annotation Timeline",
        "width": 1200,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "windows": {
      "webviewInstallMode": {
        "type": "fixedRuntime",
        "path": "webview2-fixed"
      }
    }
  },
  "plugins": {
    "dialog": null,
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
